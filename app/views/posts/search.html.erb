<% if @results.empty? %>
	<h3>no result found</h3>
<% else %>
	<div id="results">
		<table>
		  <thead>
		    <tr>
		      <th>Title</th>
		      <th>Body</th>
		      <th colspan="3"></th>
		    </tr>
		  </thead>

		  <tbody>
		    <% @results.each do |post| %>
		      <tr>
		        <td><%= post.title %></td>
		        <td><%= post.body %></td>
		        <td><%= link_to 'Show', post %></td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
	</div>
<% end %>