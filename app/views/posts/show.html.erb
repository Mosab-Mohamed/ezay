<%= render 'posts/sides'  %>


<div id="show_post">
	<div id="Question_head">
		<div id="Question_cat">
			<a href="/posts/show_cat/<%= @post.category%>?kind=question"><%= @post.category  %></a>
		</div>
		<div id="Question_time">
			<%= @post.created_at %>
		</div>
	</div>
	<h1><%= breaking_wrap_wrap(@post.title, col = 40) %></h1>
	<div  class="userInfo">
		<%= image_tag @post.user.photo.url(:small)%>
		<h3> <%= @post.user.name %> </h3>
	</div>
	<br />
	<span ><%= breaking_wrap_wrap(@post.body, col = 55) %></span>
</div>
<% if (current_user.id == @post.user_id)%>
	<div class = "option" id="edit">
	<!-- <a  href=<%= edit_post_path(@post) %>>Edit</a> -->
	<a  href="/posts/<%=@post.id%>/edit">Edit</a>
	</div>

	<div class = "option" id="destroy">
	<%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %>
	</div>
<% end %>

<div class="allComments" data-remote="true">
<% @post.comments.reverse.each do |comment| %>
	<div class="comment">
		<div class="userInfo">
		  <%= image_tag comment.user.photo.url(:small)%>
		  <h3> <%= comment.user.name %></h3>
		 </div> 
	  <span><%= breaking_wrap_wrap(comment.body, col = 55) %></span>
	  <% if current_user.id == comment.user.id %>
		  	<div class = "option" id="destroy_comment" data-remote="true">
				<a data-method='delete' href="/comments/delete/<%=comment.id%>?post_id=<%=@post.id%>" >Delete</a>
			</div>
		<% end %>
	</div></br></br></br></br>
<% end %>
</div>

<br />
<div id="newComment">
	<div class="userInfo">
		<%= image_tag current_user.photo.url(:small)%>	
		<h3> <%= current_user.name %> </h3>
	</div>
	<form  method = "POST"  action="/comments/create?post_id=<%=@post.id %>" data-remote="true">
		<div id="text">
	    	<textarea cols="70" , rows="10" name="body"></textarea>
	    </div>
	    <div id="submit">
	    	<input type="submit" value="Add Comment"> 
	    </div> 
 	</form>
</div> <br /><br /><br />


 
<hr />



